extends ../layout

block content
	h1 Nodejs_Class_20 - usuarios cadastrar.jade 
	br 
	form(method="POST", action="/usuarios", role="form")
		div(class="form-group")
			label Nome:
			input(type="text", name="nome", class="form-control" )
		div(class="form-group")
			label Login:
			input(type="text", name="login", class="form-control" )
		div(class="form-group")
