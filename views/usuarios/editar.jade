extends ../layout

block content
	h1 Nodejs_Class_20 - usuarios editar.jade 
	br 
	form(method="POST", action="/usuarios/editar/#{value._id}", role="form")
		div(class="form-group")
			label Nome:
			input(type="text", name="nome", class="form-control", value="#{value.nome}")
		div(class="form-group")
			label Login:
			input(type="text", name="login", class="form-control", value="#{value.login}")
		input(type="submit", value="OK", class="btn btn-success")
	br
	br
	a(href="/usuarios" title="Cancelar", class="btn btn-warning") Cancelar
	a(href="/" title="Home", class="btn btn-info") Home
	
	